@*IEnumerble serve para receber um conjunto de dados(Matrix) para podermos trabalhar essas dados.*@
@model IEnumerable<ToDo.Models.Tarefa>

@{
    ViewData["Title"] = "Lista Tarefas";
}

<h1>Tarefas</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Adicionar Tarefa</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
</table>