@*IEnumerble serve para receber um conjunto de dados(Matrix) para podermos trabalhar essas dados.*@
@model IEnumerable<ToDo.Models.Tarefa>

@{
    ViewData["Title"] = "Lista Tarefas";
}

<h1>Tarefas</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Adicionar Tarefa</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.EndDate.ToString("dd MMM yyyy")
                </td>
                <td>
                    @if (item.Status)
                    {
                        <span class="badge bg-success text-white">Realizado</span>
                    }
                    else if (DateTime.Now < item.EndDate)
                    {
                        <span class="badge bg-primary text-white">Executar</span>
                    }
                    else
                    {
                        <span class="badge bg-danger text-white">Atrasado</span>
                    }
                </td>
                <td>
                    <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                        Editar
                    </a>
                    <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.Id">
                        Detalhes
                    </a>
                    <a class="btn btn-danger text-white btn-sm" asp-action="Delete" asp-route-id="@item.Id">
                        Apagar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>