@model ToDo.Models.Tarefa

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes da Tarefa</h1>

<div>
    <h4>Tarefa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.TextBoxFor(model => model.EndDate, "{0:d MMM YYYY}", new {@disabled="true"})
        </dd>
        <dt class="col-sm-12">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
    <a class="btn btn-secundary text-white btn-sm" asp-action="Index">Voltar</a>
</div>
